<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#2196F3</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#2196F3</item>
    </style>

    <style name="TeamNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/team_name_color</item>
        <item name="android:textSize">@dimen/team_name_text_size</item>
    </style>

    <style name="TeamScoreTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/team_score_color</item>
        <item name="android:textSize">@dimen/team_score_text_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
